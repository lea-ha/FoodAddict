<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#602196F3"
    android:backgroundTint="#D86B21F3">

    <!-- Add your views and constraints here -->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="403dp"
        android:layout_height="302dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comfunc" />

    <TextView
        android:id="@+id/communication"
        android:layout_width="333dp"
        android:layout_height="108dp"
        android:fontFamily="sans-serif-black"
        android:text="Search for the recipes you dream of! "
        android:textColor="#150B0B"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/recipesSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/recipesSearch"
        android:layout_width="272dp"
        android:layout_height="72dp"
        android:text="Recipes Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>
